FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY specs/ ./specs/
COPY src/mcp/ ./src/mcp/
COPY tools/adk/stackrox-agent/ ./tools/adk/stackrox-agent/

# Copy environment template
COPY tools/adk/stackrox-agent/.env-example ./tools/adk/stackrox-agent/.env

# Set environment variables
ENV PYTHONPATH=/app

# Change to tools/adk directory
WORKDIR /app/tools/adk

# Expose port for ADK web interface
EXPOSE 8000

# Run ADK web
CMD ["adk", "web", "--host", "0.0.0.0", "--port", "8000"]
